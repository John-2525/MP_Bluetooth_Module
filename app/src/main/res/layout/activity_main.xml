<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/home_textview"
        android:layout_width="246dp"
        android:layout_height="39dp"
        android:layout_marginTop="140dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="IReminder Application"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/diffuser_button"
        android:layout_width="150dp"
        android:layout_height="94dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="56dp"
        android:text="Diffuser Bluetooth"
        app:layout_constraintBottom_toTopOf="@+id/image_album_button"
        app:layout_constraintEnd_toStartOf="@+id/reminder_button"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/reminder_button"
        android:layout_width="150dp"
        android:layout_height="94dp"
        android:layout_marginBottom="56dp"
        android:text="Reminders"
        app:layout_constraintBottom_toTopOf="@+id/game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />

    <Button
        android:id="@+id/game_button"
        android:layout_width="150dp"
        android:layout_height="94dp"
        android:layout_marginBottom="168dp"
        android:text="Games"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/image_album_button"
        android:layout_width="150dp"
        android:layout_height="94dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="168dp"
        android:text="Image Album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_button"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>